---
import { ViewTransitions } from 'astro:transitions';
import "../styles/tailwind.css";

import Anchor from '../components/utils/Anchor';
import Container from '../components/utils/Container.astro';
interface Props {
  title: string;
}
const path = Astro.url.pathname;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full bg-neutral-950 text-base antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="none"/>
  </head>
  <body class="flex min-h-full flex-col no-scrollbar">
    <div>
      <div class="absolute left-0 right-0 top-2 z-40 pt-14">
        <Container>
          <div class="flex justify-between">
            <div class="grid grid-cols-2 gap-2">
              <Anchor invert={path === "/"} href="/">
                Home
              </Anchor>
              <Anchor invert={path.includes("blog")} href="/blog">
                Blog
              </Anchor>
            </div>
            <div>
              <Anchor href="https://github.com/Gitgud6969">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    fill="#fff"
                  />
                </svg>
              </Anchor>
              <Anchor href="https://www.linkedin.com/in/simon-lehmann-6070361b2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    fill="#fff"
                  />
                </svg>
              </Anchor>
            </div>
          </div>
        </Container>
      </div>
    </div>
   
    <div class="relative flex flex-auto overflow-hidden pt-14">
      <div class="relative isolate flex w-full flex-col pt-9">
        <main class="w-full flex-auto"><slot /></main>
      </div>
    </div>
    <footer class="fixed bottom-0 right-0 p-5 z-10">
      <a class="mt-3 font-display font-semibold text-slate-400 " href="/impressum" >Impressum</a>
  </footer>

    <script>
      if (!document.startViewTransition) {
        document.getElementById("not-support").classList.remove("hidden");
      }
      document.addEventListener("astro:page-load", () => {
        for (const el of document.querySelectorAll(".el-to-fade")) {
          el.classList.remove("scale-90");
        }
      });
    </script>
  </body>
</html>
