---
import Container from "../../components/utils/Container.astro";
import Layout from "../../layouts/Layout.astro";
const posts = await Astro.glob('/src/content/blog/*.md');

---

<Layout title="Blog">
   <Container className="mt-24 sm:mt-32 lg:mt-40">
    <div class="space-y-24 lg:space-y-32">
      {posts.map((article) => (
          <article>
            <div class="pt-16 relative before:absolute after:absolute before:left-0 before:top-0 before:h-px before:w-6 after:left-8 after:right-0 after:top-0 after:h-px before:bg-slate-300 after:bg-slate-300/10">
              <div class="relative lg:-mx-4 lg:flex lg:justify-start">
                <div class="pt-10 lg:w-2/3 lg:flex-none lg:px-4 lg:pt-0">
                  <h2 
                   class="font-display text-2xl font-semibold text-slate-300"
                   transition:name=`title ${article.frontmatter.url}`
                   >
                    <a href={article.frontmatter.href}>{article.frontmatter.title}</a>
                  </h2>
                  <dl class="lg:absolute lg:left-0 lg:top-0 lg:w-1/3 lg:px-4">
                    <dt class="sr-only">Published</dt>
                    <dd class="absolute left-0 top-0 text-sm text-slate-300 lg:static">
                      <time date-time={article.frontmatter.date}>
                        {article.frontmatter.date?.toLocaleDateString("de-de")}
                      </time>
                    </dd>
                    <dt class="sr-only">Author</dt>
                    
                  </dl>
                  <p class="mt-6 max-w-2xl text-base text-neutral-600">
                    {article.frontmatter.description}
                  </p>
                  <a
                    class="mt-8 inline-flex rounded-full px-4 py-1.5 text-sm font-semibold transition text-center bg-white text-neutral-950 hover:bg-neutral-200"
                    href={`/blog/${article.frontmatter.url}`}
                    aria-label={`Read more: ${article.frontmatter.title}`}
                  >
                    Read more
                  </a>
                </div>
              </div>
            </div>
          </article>
      ))}
    </div>
  </Container>
</Layout>
